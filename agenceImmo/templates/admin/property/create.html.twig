{% extends "base.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
<h2>Ajouter un nouveau bien</h2>
    <div class="container">
            {{ form_start(form) }}
        <div class="row">
            <div class="col-md-2">            
                {{ form_row(form.sold) }}                
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">            
                {{ form_row(form.name) }}                
            </div>            
        </div>
        <div class="row">
             <div class="col-md-12">            
                {{ form_row(form.description) }}                
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                {{ form_row(form.surface) }}   
            </div>
            <div class="col-md-3">
                {{ form_row(form.room) }}   
            </div>
            <div class="col-md-3">
                {{ form_row(form.floor) }}   
            </div>
            <div class="col-md-3">
                {{ form_row(form.price) }}   
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.address) }} 
            </div>
            <div class="col-md-4">
                {{ form_row(form.city) }} 
            </div>
            <div class="col-md-4">
                {{ form_row(form.postalCode) }} 
            </div>
        </div>
    </div>
{{ form_end(form) }}
{% endblock %}


            